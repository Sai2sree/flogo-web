{
  "$schema": "http://json-schema.org/schema",
  "id": "flogo-plugin",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "Resource type",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "core": {
      "type": "boolean",
      "description": "Generate core",
      "default": false,
      "x-prompt": "Would you like to generate an additional library to share code between server and client?"
    },
    "ref": {
      "type": "string",
      "description": "Contribution ref",
      "default": false,
      "x-prompt": "What is the ref to the action contribution for this plugin? Example: github.com/project-flogo/flow"
    }
  },
  "required": ["type"]
}

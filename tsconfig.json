{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@flogo-web/parser": [
        "libs/parser/src/index.ts"
      ],
      "@flogo-web/client/*": [
        "apps/client/src/flogo/*"
      ],
      "@flogo-web/server/core": [
        "libs/server/core/src/index.ts"
      ],
      "@flogo-web/plugins/flow-server": [
        "libs/plugins/flow-server/src/index.ts"
      ],
      "@flogo-web/client-core": [
        "libs/client/core/src/index.ts"
      ],
      "@flogo-web/client-core/*": [
        "libs/client/core/src/*"
      ],
      "@flogo-web/client-shared": [
        "libs/client/shared/src/index.ts"
      ],
      "@flogo-web/client-shared/utils": [
        "libs/client/shared/src/utils.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp",
    "dist",
    "coverage"
  ]
}
